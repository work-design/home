<tr>
  <td><%= facilitate.name %></td>
  <td><%= image_tag facilitate.logo, size: '50x50' if facilitate.logo.attached? %></td>
  <td><%= facilitate.description %></td>
  <td><time><%= facilitate.created_at.to_s(:rfc822) %></time></td>
  <td><%= facilitate.price %></td>
  <td>
    <%= link_to admin_good_providers_path('Facilitate', facilitate), class: 'button is-small is-rounded is-light' do %>
      <i class="fas fa-eye"></i><%= '供应商管理' %>
    <% end %>
    <%= link_to admin_facilitate_path(facilitate), aria: { label: t('.show') }, class: 'button is-small is-rounded is-light' do %>
      <i class="fas fa-eye"></i>
    <% end %>
    <%= link_to edit_admin_facilitate_path(facilitate), aria: { label: t('.edit') }, remote: true, class: 'button is-small is-rounded is-light' do %>
      <i class="fas fa-pencil-alt"></i>
    <% end %>
    <%= link_to admin_facilitate_path(facilitate), method: :delete, aria: { label: t('.destroy') }, data: { confirm: t('.confirm') }, remote: true, class: 'button is-small is-rounded is-light' do %>
      <i class="fas fa-trash-alt"></i>
    <% end %>
  </td>
</tr>
