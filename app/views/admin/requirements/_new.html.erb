<div class="ui modal" id="modal">
  <i class="close icon"></i>
  <div class="ui header">
    <%= t('.new') %>
  </div>

  <div class="content">
    <%= form_with model: [:admin, @requirement] do |f| %>
      <%= render partial: 'form', locals: { f: f } %>
      <%= f.text_field :user_id %>
      <%= f.submit %>
    <% end %>
  </div>
</div>
