[Unit]
Description=sidekiq
After=syslog.target network.target

[Service]
Type=simple
WorkingDirectory=/home/ubuntu/web/one_work/current
ExecStart=/bin/bash -lc '/home/ubuntu/.rbenv/shims/bundle exec sidekiq -e staging'

Environment=MALLOC_ARENA_MAX=2

RestartSec=1
Restart=on-failure

StandardOutput=syslog
StandardError=syslog

SyslogIdentifier=sidekiq

[Install]
WantedBy=multi-user.target
